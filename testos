<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Snake Game</title>
<style>
#game-board {
  width: 400px;
  height: 400px;
  background-color: #000;
  border: 1px solid #FFF;
  position: relative;
  margin: auto;
}
.snake {
  width: 20px;
  height: 20px;
  background-color: #0f0;
  position: absolute;
}
.food {
  width: 20px;
  height: 20px;
  background-color: #f00;
  position: absolute;
}
</style>
</head>
<body>

<h1>Snake Game</h1>
<div id="game-board"></div>

<script>
const gameBoard = document.getElementById('game-board');
const boardSize = 400;
const cellSize = 20;
const boardCells = boardSize / cellSize;
let snake = [{x: 2, y: 2}];
let food = {x: 10, y: 10};
let dx = 1;
let dy = 0;
let intervalId;

function startGame() {
  intervalId = setInterval(updateGame, 200);
  placeFood();
}

function updateGame() {
  const head = {x: snake[0].x + dx, y: snake[0].y + dy};
  snake.unshift(head);

  if (head.x === food.x && head.y === food.y) {
    placeFood();
  } else {
    snake.pop();
  }

  if (head.x < 0 || head.x >= boardCells || head.y < 0 || head.y >= boardCells || snake.slice(1).some(part => part.x === head.x && part.y === head.y)) {
    gameOver();
    return;
  }

  drawGame();
}

function drawGame() {
  gameBoard.innerHTML = '';
  snake.forEach(part => drawCell(part, 'snake'));
  drawCell(food, 'food');
}

function drawCell(part, className) {
  const piece = document.createElement('div');
  piece.style.left = `${part.x * cellSize}px`;
  piece.style.top = `${part.y * cellSize}px`;
  piece.classList.add(className);
  gameBoard.appendChild(piece);
}

function placeFood() {
  let newFoodPosition;
  do {
    newFoodPosition = {
      x: Math.floor(Math.random() * boardCells),
      y: Math.floor(Math.random() * boardCells)
    };
  } while (snake.some(part => part.x === newFoodPosition.x && part.y === newFoodPosition.y));
  food = newFoodPosition;
}
function gameOver() {
  clearInterval(intervalId);
  alert('Game Over');
}

window.addEventListener('keydown', e => {
  if (e.key === 'ArrowUp' && dy === 0) {
    dx = 0;
    dy = -1;
  }
  else if (e.key === 'ArrowDown' && dy === 0) {
    dx = 0;
    dy = 1;
  }
  else if (e.key === 'ArrowLeft' && dx === 0) {
    dx = -1;
    dy = 0;
  }
  else if (e.key === 'ArrowRight' && dx === 0) {
    dx = 1;
    dy = 0;
  }
});

startGame();
</script>
</body>
</html>
